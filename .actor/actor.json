{
    "actorSpecification": 1,
    "name": "tastly-google-scraper",
    "title": "Tastly Google Maps Review Scraper",
    "description": "Scrapes Google Maps restaurant reviews using Playwright.",
    "version": "0.1",
    "buildTag": "latest",
    "dockerfile": "../Dockerfile",
    "input": "./input_schema.json",
    "storages": {
        "dataset": {
            "actorSpecification": 1,
            "title": "Google Maps Reviews",
            "views": {
                "reviews": {
                    "title": "Reviews",
                    "transformation": {
                        "fields": [
                            "reviewId",
                            "stars",
                            "publishedAtDate",
                            "name",
                            "text",
                            "responseFromOwnerText",
                            "responseFromOwnerDate",
                            "reviewUrl",
                            "likesCount",
                            "reviewDetailedRating"
                        ]
                    }
                }
            }
        }
    }
}
